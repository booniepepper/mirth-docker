#!/bin/sh

set -eu

mkdir -p temp

echo "\
module(temp.eval)

import(std.prelude)
import(std.list)
import(std.maybe)
import(posix.posix)

def(main, +World -- +World,
  $*
  ??
  0 prim-posix-exit)
" >temp/eval.mth

compile() {
  mirth temp/eval.mth \
    -p temp:temp \
    -p mirth:/opt/mirth/src/mirth \
    -p posix:/opt/mirth/src/posix \
    -p std:/opt/mirth/src/std \
    -o temp/eval.c
  mkdir -p bin
  cc temp/eval.c \
    -o bin/temp
}


# stderr redirection and exits are temporary until discord bots handle them properly.
if ! compile >>compile.log 2>>compile.log
then
  echo '=== ERRORS ==='
  cat compile.log
  echo '=== SOURCE ==='
  cat temp/eval.mth
  exit 0
fi

2>&1 bin/temp || exit 0
